@page
@model RoomReservationsModel
@{
  ViewData["Title"] = "Room Reservations";
}

<h1 class="display-4">Reserved Rooms</h1>

<hr />

<table class="table table-striped table-bordered dt-responsive nowrap">
  <thead class="thead-light">
    <tr>
      <th>Date</th>
      <th>Room Id</th>
      <th>Email</th>
      <th>FirstName</th>
      <th>LastName</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var roomReservation in Model.RoomReservations)
    {
      <tr>
        <td>@roomReservation.Date.ToShortDateString()</td>
        <td>@roomReservation.RoomId</td>
        <td>@roomReservation.Email</td>
        <td>@roomReservation.FirstName</td>
        <td>@roomReservation.LastName</td>
      </tr>
    }
  </tbody>
</table>

