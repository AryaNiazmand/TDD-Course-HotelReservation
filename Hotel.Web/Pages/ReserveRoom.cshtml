@page
@model ReserveRoomModel
@{
  ViewData["Title"] = "Reserve a Room";
}

<h1 class="display-4">Reserve a Room</h1>

<form method="post">

  <div class="form-group">
    <label asp-for="RoomReservationRequest.FirstName" class="control-label"></label>
    <input asp-for="RoomReservationRequest.FirstName" class="form-control">
    <span asp-validation-for="RoomReservationRequest.FirstName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="RoomReservationRequest.LastName" class="control-label"></label>
    <input asp-for="RoomReservationRequest.LastName" class="form-control">
    <span asp-validation-for="RoomReservationRequest.LastName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="RoomReservationRequest.Email" class="control-label"></label>
    <input asp-for="RoomReservationRequest.Email" class="form-control">
    <span asp-validation-for="RoomReservationRequest.Email" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="RoomReservationRequest.Date" class="control-label"></label>
    <input asp-for="RoomReservationRequest.Date" asp-format="{0:dd/MM/yyyy}" class="form-control">
    <span asp-validation-for="RoomReservationRequest.Date" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Reserve a Room</button>

</form>